<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.kchebolu.myappportfolio.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:layout_gravity="center"
        android:textColor="#607D8B"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:onClick="popularMovies"
        android:textAllCaps="true"
        android:background="#607D8B"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Stock hawk"
        android:onClick="stockHawk"
        android:textAllCaps="true"
        android:background="#607D8B"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Build it Bigger"
        android:onClick="buildBigger"
        android:textAllCaps="true"
        android:background="#607D8B"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Make your app material"
        android:onClick="material"
        android:background="#607D8B"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Go ubiquitous"
        android:onClick="goUbiquitous"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:background="#607D8B"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>
    <Button
        android:onClick="capStone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:background="#607D8B"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"/>
</LinearLayout>
